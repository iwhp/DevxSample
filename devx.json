{
    "name": "DEVX S77AMPLE (ERP)",
    "description": "Devx Sample application.",
    "version": "0.0.1",
    "entities": {
        "group": "CustomerModule",
        "items": [{
            "group": "CustomerAggregate",
            "items": [{
                "name": "Customer"
            }]
        }]
    },
    "modules": [
